---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';
import TableOfContents from '../components/TableOfContents.astro';
import CopyCode from '../components/CopyCode.astro';
import BackToTop from '../components/BackToTop.astro';

interface Props {
  title: string;
  description: string;
  icon: string;
  category: string;
  readingTime?: number;
  headings?: { depth: number; slug: string; text: string }[];
}

const { title, description, icon, category, readingTime, headings = [] } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} - Software Engineering 3.0</title>
  <script is:inline>
    // Prevent flash of wrong theme
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'light') {
      document.documentElement.setAttribute('data-theme', 'light');
    }
  </script>
</head>
<body>
  <ThemeToggle />
  <div class="container">
    <header class="article-header" data-pagefind-ignore>
      <div class="header-meta">
        <span class={`badge badge-${category}`}>
          {category === 'article' ? 'ARTICOLO' : 'GUIDA'}
        </span>
        {readingTime && (
          <span class="reading-time">
            üìñ {readingTime} min lettura
          </span>
        )}
      </div>
      <h1>{title}</h1>
      <p class="tagline">{description}</p>
    </header>

    <article class="article-content" data-pagefind-body>
      <span data-pagefind-meta="title" style="display:none;">{title}</span>
      <TableOfContents headings={headings} />
      <slot />
    </article>

    <footer>
      <p>Software Engineering 3.0</p>
      <p><a href={base}>‚Üê Torna alla Home</a></p>
    </footer>
  </div>
  <CopyCode />
  <BackToTop />
</body>
</html>
