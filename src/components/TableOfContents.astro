---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// Filter to only h2 and h3
const toc = headings.filter(h => h.depth === 2 || h.depth === 3);
---

{toc.length > 0 && (
  <nav class="toc" aria-label="Indice">
    <details>
      <summary class="toc-title">Indice</summary>
      <ul class="toc-list">
        {toc.map((heading) => (
          <li class={`toc-item toc-depth-${heading.depth}`}>
            <a href={`#${heading.slug}`}>{heading.text}</a>
          </li>
        ))}
      </ul>
    </details>
  </nav>
)}

<style>
  .toc {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1rem 1.25rem;
    margin: 1.5rem 0 2rem;
  }

  .toc-title {
    font-weight: 600;
    color: var(--text-primary);
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .toc-title::before {
    content: "ðŸ“‘";
  }

  .toc-title::-webkit-details-marker {
    display: none;
  }

  details[open] .toc-title {
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
  }

  details summary::marker {
    content: "";
  }

  .toc-title::after {
    content: "â–¶";
    font-size: 0.7rem;
    margin-left: auto;
    transition: transform 0.2s;
  }

  details[open] .toc-title::after {
    transform: rotate(90deg);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin: 0.35rem 0;
  }

  .toc-item a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    display: block;
    padding: 0.25rem 0;
    transition: color 0.15s;
  }

  .toc-item a:hover {
    color: var(--accent-blue);
  }

  .toc-depth-3 {
    padding-left: 1rem;
  }

  .toc-depth-3 a {
    font-size: 0.85rem;
    color: var(--text-secondary);
    opacity: 0.8;
  }
</style>
