---
interface Props {
  number: number;
  title: string;
}

const { number, title } = Astro.props;
---

<div class="step-header-component">
  <span class="step-number">{number}</span>
  <h3>{title}</h3>
</div>

<style>
  .step-header-component {
    display: flex;
    align-items: center;
    margin: 2.5rem 0 1.25rem;
    gap: 0.75rem;
  }

  .step-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
    color: white;
    border-radius: 50%;
    font-weight: 700;
    font-size: 1rem;
    flex-shrink: 0;
  }

  h3 {
    margin: 0;
    color: var(--text-primary);
    font-size: 1.25rem;
  }
</style>