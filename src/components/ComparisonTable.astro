---
interface Props {
  leftTitle: string;
  rightTitle: string;
  leftItems: string[];
  rightItems: string[];
  leftColor?: 'red' | 'green' | 'blue' | 'orange';
  rightColor?: 'red' | 'green' | 'blue' | 'orange';
}

const { leftTitle, rightTitle, leftItems, rightItems, leftColor = 'red', rightColor = 'green' } = Astro.props;

const colorMap = {
  red: { bg: 'rgba(248, 81, 73, 0.1)', border: 'var(--accent-red)', text: 'var(--accent-red)' },
  green: { bg: 'rgba(63, 185, 80, 0.1)', border: 'var(--accent-green)', text: 'var(--accent-green)' },
  blue: { bg: 'rgba(88, 166, 255, 0.1)', border: 'var(--accent-blue)', text: 'var(--accent-blue)' },
  orange: { bg: 'rgba(210, 153, 34, 0.1)', border: 'var(--accent-orange)', text: 'var(--accent-orange)' },
};

const left = colorMap[leftColor];
const right = colorMap[rightColor];
---

<div class="comparison-grid">
  <div class="comparison-side" style={`background: ${left.bg}; border-left-color: ${left.border};`}>
    <h4 style={`color: ${left.text};`}>{leftTitle}</h4>
    <ul>
      {leftItems.map((item) => <li>{item}</li>)}
    </ul>
  </div>
  <div class="comparison-side" style={`background: ${right.bg}; border-left-color: ${right.border};`}>
    <h4 style={`color: ${right.text};`}>{rightTitle}</h4>
    <ul>
      {rightItems.map((item) => <li>{item}</li>)}
    </ul>
  </div>
</div>

<style>
  .comparison-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 1.5rem 0;
  }

  .comparison-side {
    padding: 1.25rem;
    border-radius: 8px;
    border-left: 4px solid;
  }

  h4 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
  }

  ul {
    margin: 0;
    padding-left: 1.25rem;
    list-style-type: disc;
  }

  li {
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  li:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .comparison-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
