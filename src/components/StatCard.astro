---
interface Props {
  stats: Array<{
    value: string;
    label: string;
    color?: 'blue' | 'green' | 'red' | 'orange' | 'purple';
  }>;
}

const { stats } = Astro.props;

const colorMap = {
  blue: 'var(--accent-blue)',
  green: 'var(--accent-green)',
  red: 'var(--accent-red)',
  orange: 'var(--accent-orange)',
  purple: 'var(--accent-purple)',
};
---

<div class="stat-grid">
  {stats.map((stat) => (
    <div class="stat-item">
      <div class="stat-value" style={`color: ${colorMap[stat.color || 'blue']};`}>
        {stat.value}
      </div>
      <div class="stat-label">{stat.label}</div>
    </div>
  ))}
</div>

<style>
  .stat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.25rem;
    margin: 1.5rem 0;
  }

  .stat-item {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .stat-item:hover {
    border-color: var(--accent-blue);
    transform: translateY(-2px);
  }

  .stat-value {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .stat-label {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }
</style>
